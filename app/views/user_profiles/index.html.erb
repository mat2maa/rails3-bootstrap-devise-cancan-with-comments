<div class="span12">
  <h1><%= UserProfile.model_name.human(:count => 2).mb_chars.titlecase.to_s %></h1>
  <br>

  <table class="table table-striped">
    <tr>
      <th><%= User.model_name.human(:count => 1) %></th>
      <th><%= UserProfile.human_attribute_name(:type) %></th>
      <th><%= UserProfile.human_attribute_name(:name) %></th>
      <th><%= UserProfile.human_attribute_name(:website) %></th>
      <th><%= UserProfile.human_attribute_name(:email) %></th>
      <th><%= UserProfile.human_attribute_name(:phone) %></th>
      <th><%= UserProfile.human_attribute_name(:rep_name) %></th>
      <th><%= UserProfile.human_attribute_name(:rep_email) %></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

    <% @user_profiles.each do |user_profile| %>
      <tr>
        <td><%= user_profile.user_id %></td>
        <td><%= user_profile.type %></td>
        <td><%= user_profile.name %></td>
        <td><%= user_profile.website %></td>
        <td><%= user_profile.email %></td>
        <td><%= user_profile.phone %></td>
        <td><%= user_profile.rep_name %></td>
        <td><%= user_profile.rep_email %></td>
        <td>
          <% if can? :read, user_profile %>
            <%= link_to "#{t('action.show')}", user_profile_path(user_profile) %>
          <% end %>
        </td>
        <td>
          <% if can? :edit, user_profile %>
            <%= link_to "#{t('action.edit')}", edit_user_profile_path(user_profile) %>
          <% end %>
        </td>
        <td>
          <% if can? :destroy, user_profile %>
            <%= link_to "#{t('action.destroy')}", user_profile_path(user_profile), :method => :delete, :data => { :confirm => "#{t('alert.are_you_sure')}" } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>

  <br />
</div>
