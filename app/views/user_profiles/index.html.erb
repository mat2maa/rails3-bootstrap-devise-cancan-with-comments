<h1>Listing user_profiles</h1>

<table class="table table-striped">
  <tr>
    <th>User</th>
    <th>Type</th>
    <th>Name</th>
    <th>Website</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Rep name</th>
    <th>Rep email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @user_profiles.each do |user_profile| %>
  <tr>
    <td><%= user_profile.user_id %></td>
    <td><%= user_profile.type %></td>
    <td><%= user_profile.name %></td>
    <td><%= user_profile.website %></td>
    <td><%= user_profile.email %></td>
    <td><%= user_profile.phone %></td>
    <td><%= user_profile.rep_name %></td>
    <td><%= user_profile.rep_email %></td>
    <td><%= link_to "#{t('action.show')}", user_profile_path(user_profile) %></td>
    <td><%= link_to "#{t('action.edit')}", edit_user_profile_path(user_profile) %></td>
    <td><%= link_to "#{t('action.destroy')}", user_profile_path(user_profile), :method => :delete, :data => { :confirm => "#{t('alert.are_you_sure')}" } %></td>
  </tr>
<% end %>
</table>

<br />