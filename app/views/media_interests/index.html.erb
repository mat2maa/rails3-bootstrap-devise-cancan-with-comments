<div class="span12">
  <h1><%= MediaInterest.model_name.human(:count => 2).mb_chars.titlecase.to_s %></h1>
  <br>

  <table class="table table-striped">
    <tr>
      <th><%= UserProfile.model_name.human(:count => 2) %></th>
      <th><%= MediaInterest.human_attribute_name(:name) %></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

    <% @media_interests.each do |media_interest| %>
      <tr>
        <td><%= media_interest.user_profile_id %></td>
        <td><%= media_interest.name %></td>
        <td>
          <% if can? :read, media_interest %>
            <%= link_to "#{t('action.show')}", media_interest %>
          <% end %>
        </td>
        <td>
          <% if can? :edit, media_interest %>
            <%= link_to "#{t('action.edit')}", edit_media_interest_path(media_interest) %>
          <% end %>
        </td>
        <td>
          <% if can? :destroy, media_interest %>
            <%= link_to "#{t('action.destroy')}", media_interest, :method => :delete, :data => {:confirm => "#{t('alert.are_you_sure')}"} %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>

  <br />

  <% if can? :create, MediaInterest %>
    <br/>
    <%= link_to "#{t(:new, :gender => :m)} #{MediaInterest.model_name.human}", new_media_interest_path %>
  <% end %>
</div>
