<br><br>
<%= minimal_nested_form_for [resource_name, resource.with_user_profile],
                            :url => registration_path(resource_name),
                            :html => { :class => 'form-vertical' } do |f| %>
  <div class="span6">
    <h4>1. Податоци за најавување</h4>
    <hr>
    <%= devise_error_messages! %>
    <%= f.error_notification %>
    <%= display_base_errors resource %>
    <%= f.input :email,
                :placeholder => 'имејл',
                :required => true %>
    <p>Лозинката мора да има најмалку 6 карактери</p>
    <%= f.input :password,
                :placeholder => 'лозинка',
                :required => true %>
    <%= f.input :password_confirmation,
                :placeholder => 'потврда на лозинката',
                :required => true %>
  </div>
  <div class="span6">
    <h4>2. Вид на профил</h4>
    <hr>
    <ul class="nav nav-pills nav-stacked" id="profile-type-select">
      <li data-type="ngo">
        <a href="#">НВО</a>
      </li>
      <li data-type="expert">
        <a href="#">експерт</a>
      </li>
      <li data-type="institution">
        <a href="#">институција</a>
      </li>
      <li data-type="media">
        <a href="#">медиум</a>
      </li>
    </ul>
  </div>
  <div class="span12 dynamic-form" style="display:none;">
    <h4>3. Други податоци</h4>
    <hr>
    <div class="form-inputs dynamic-form-inputs">
      <%= f.simple_fields_for :user_profile do |builder| %>
        <%= render 'user_profile_fields',
                   :f => builder %>
      <% end %>
    </div>

    <div class="form-actions">
      <%= f.button :submit,
                   'регистрирај се',
                   :class => 'btn-primary' %>
    </div>
<% end %>
</div>
