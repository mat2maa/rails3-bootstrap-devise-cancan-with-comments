<div class="span12">
  <h3>Users</h3>
  <table class="table table-striped">
    <thead>
    <tr>
      <th>Logo</th>
      <th>User</th>
      <th>Email</th>
      <th>Registered</th>
      <th>Role</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.user_profile.logo_url(:thumb).to_s %></td>
        <td><%= user.user_profile.name %></td>
        <td><%= user.email %></td>
        <td><%= user.created_at.to_date %></td>
        <td><%= user.roles.first.name.titleize unless user.roles.first.nil? %></td>
        <td>
          <a data-toggle="modal" href="#role-options-<%= user.id %>" class="btn btn-mini" type="button">Change role</a>
          <%= render user %>
        </td>
        <td><%= link_to("Delete user", user_path(user), :data => {:confirm => "Are you sure?"}, :method => :delete, :class => 'btn btn-mini') unless user == current_user %></td>
        <td><%= link_to "#{t('action.show')}",
                        user_path(user) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
