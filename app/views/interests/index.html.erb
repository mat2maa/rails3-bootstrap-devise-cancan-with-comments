<div class="span12">
  <h1><%= Interest.model_name.human(:count => 2).mb_chars.titlecase.to_s %></h1>
  <br>

  <table class="table table-striped">
    <tr>
      <th><%= UserProfile.model_name.human(:count => 2) %></th>
      <th><%= Interest.human_attribute_name(:name) %></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

    <% @interests.each do |interest| %>
      <tr>
        <td><%= interest.user_profile_id %></td>
        <td><%= interest.name %></td>
        <td>
          <% if can? :read, interest %>
            <%= link_to "#{t('action.show')}", interest %>
          <% end %>
        </td>
        <td>
          <% if can? :edit, interest %>
            <%= link_to "#{t('action.edit')}", edit_interest_path(interest) %>
          <% end %>
        </td>
        <td>
          <% if can? :destroy, interest %>
            <%= link_to "#{t('action.destroy')}", interest, :method => :delete, :data => {:confirm => "#{t('alert.are_you_sure')}"} %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>

  <br />

  <% if can? :create, Interest %>
    <br/>
    <%= link_to "#{t(:new, :gender => :m)} #{Interest.model_name.human}", new_interest_path %>
  <% end %>
</div>
