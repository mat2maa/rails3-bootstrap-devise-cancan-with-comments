<div class="span12">
  <h1><%= Sector.model_name.human(:count => 2).mb_chars.titlecase.to_s %></h1>
  <br>

  <table class="table table-striped">
    <tr>
      <th><%= UserProfile.model_name.human(:count => 2) %></th>
      <th><%= Sector.human_attribute_name(:name) %></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

    <% @sectors.each do |sector| %>
      <tr>
        <td><%= sector.user_profile_id %></td>
        <td><%= sector.name %></td>
        <td>
          <% if can? :read, sector %>
            <%= link_to "#{t('action.show')}", sector %>
          <% end %>
        </td>
        <td>
          <% if can? :edit, sector %>
            <%= link_to "#{t('action.edit')}", edit_sector_path(sector) %>
          <% end %>
        </td>
        <td>
          <% if can? :destroy, sector %>
            <%= link_to "#{t('action.destroy')}", sector, :method => :delete, :data => {:confirm => "#{t('alert.are_you_sure')}"} %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>

  <br />

  <% if can? :create, Sector %>
    <br/>
    <%= link_to "#{t(:new, :gender => :m)} #{Sector.model_name.human}", new_sector_path %>
  <% end %>
</div>
