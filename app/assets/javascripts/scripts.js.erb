var type;

$(document).ready(function() {

  $('body').on("click", "#profile-type-select > li > a", function(e) {
    e.preventDefault();
    $('#profile-type-select').find('li').removeClass('active');
    $(this).closest('li').addClass('active');
    type = $(this).closest('li').attr('data-type');
    $('.dynamic-form').fadeIn('fast');
    $('.dynamic-form-inputs')
        .find('.controls-row').fadeOut('fast')
        .find('.' + type).closest('.controls-row').fadeIn('fast');
    if(type == 'ngo') {
      $('#user_user_profile_attributes_type').val("NGO");
    } else if(type == 'expert') {
      $('#user_user_profile_attributes_type').val("Expert");
    } else if(type == 'institution') {
      $('#user_user_profile_attributes_type').val("Institution");
    } else if(type == 'media') {
      $('#user_user_profile_attributes_type').val("Medium");
    }
    $(document.body).animate({scrollTop: $('#new_user').offset().top - 250}, 'slow');
  });

  //enable chosen js
  $('.select2').select2();

});